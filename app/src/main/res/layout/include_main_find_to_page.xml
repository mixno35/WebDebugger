<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainIncludeFindToPage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <TextView
        android:id="@+id/textFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 0"
        android:textSize="13sp"
        android:textColor="@color/textUrl"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:maxLines="1"
        android:background="@color/textUrlBackground"
        android:layout_marginRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="10dp"
        android:background="@color/colorActionBar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editFind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="14sp"
            android:hint="@string/hint_find_to_page"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:imeOptions="actionSend"
            android:inputType="textNoSuggestions"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/actionFindBack"
            android:padding="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="?attr/colorControlNormal"
            android:src="@drawable/ic_find_back"/>

        <ImageView
            android:id="@+id/actionFindNext"
            android:padding="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="?attr/colorControlNormal"
            android:src="@drawable/ic_find_next"/>

        <ImageView
            android:id="@+id/actionFindClose"
            android:padding="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="?attr/colorControlNormal"
            android:src="@drawable/ic_find_close"/>

    </LinearLayout>

</LinearLayout>